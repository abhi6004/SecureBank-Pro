@{
    Layout = null;
    var returnUrl = Context.Request.Query["ReturnUrl"].ToString();
}

<h3>Login Form</h3>

<form asp-action="Login" method="post">

    <div>
        <label>Email</label>
        <input name="email" type="email" />
    </div>

    <div>
        <label>Password</label>
        <input name="password" type="password" />
    </div>

    <div>
        <button type="submit">Login</button>
    </div>
</form>
